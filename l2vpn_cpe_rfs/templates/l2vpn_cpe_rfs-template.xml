<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <interface xmlns="urn:ios">
          <?if {starts-with(/interface/interface_name,'TenGig')}?>
          <TenGigabitEthernet>
            <name>{/interface/interface_number}</name>
            <description>{/interface/interface_description}</description>
            <service>
              <instance>
                <id>{/ovlan}</id>
                <ethernet/>
                <encapsulation>
                  <dot1q>
                    <id>{/ovlan}</id>
                    <second-dot1q>{/ivlan}</second-dot1q>
                  </dot1q>
                </encapsulation>
                <rewrite>
                  <ingress>
                    <tag>
                      <pop>2</pop>
                      <mode>symmetric</mode>
                    </tag>
                  </ingress>
                </rewrite>
                <bridge-domain>
                  <bridge-id>{/ivlan}</bridge-id>
                </bridge-domain>
              </instance>
            </service>
          </TenGigabitEthernet>
          <?end?>
          <?if {starts-with(/interface/interface_name,'Gigabit')}?>
          <GigabitEthernet>
            <name>{/interface/interface_number}</name>
            <description>{/interface/interface_description}</description>
            <service>
              <instance>
                <id>{/ovlan}</id>
                <ethernet/>
                <encapsulation>
                  <dot1q>
                    <id>{/ovlan}</id>
                    <second-dot1q>{/ivlan}</second-dot1q>
                  </dot1q>
                </encapsulation>
                <rewrite>
                  <ingress>
                    <tag>
                      <pop>2</pop>
                      <mode>symmetric</mode>
                    </tag>
                  </ingress>
                </rewrite>
                <bridge-domain>
                  <bridge-id>{/ivlan}</bridge-id>
                </bridge-domain>
              </instance>
            </service>
          </GigabitEthernet>
          <?end?>

          <BDI>
            <name>{/ivlan}</name>
            <ip>
              <address>
                <primary>
                  <address>{/ovlan}.{/ovlan}.{/ovlan}.2</address>
                  <mask>255.255.255.0</mask>
                </primary>
              </address>
            </ip>
          </BDI>
        </interface>
      </config>
    </device>
  </devices>
</config-template>
